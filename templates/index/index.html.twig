{% extends 'base.html.twig' %}




{% block body %}

    <script>

        var x =0;

        var textEffect = ".Commandeur.";
        var container = document.getElementById('effect');


        function animate (e) {

            if (x < textEffect.length){

                container.innerHTML+= textEffect.charAt(x);

                x++;
                setTimeout(animate,70);
                e.preventDefault();
            }
        }
        animate();

    </script>



