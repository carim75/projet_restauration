{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/login_style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/create.css') }}">
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/titles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/visite.css') }}">

{% endblock %}

{% block body %}

    <div class="container animate__animated animate__backInUp">
        <h1>Liste des utilisateurs</h1>

        <table class="table table-light table-hover" style="border-radius: 5px">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Fonction</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>

            {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.pseudo }}</td>
                    <td>{{ utilisateur.nomcomplet }}</td>
                    <td>{{ utilisateur.fonction }}</td>
                    <td class="text-center">
                        <a href="{{ path('utilisateur_edit', {id:utilisateur.id}) }}"> <img src="{{ asset('img/user.png') }}" alt="edition utilisateur"> </a>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_admin_utilisateur_delete', {id:utilisateur.id}) }}" class="btn-delete">  <img src="{{ asset('img/trash.png') }}" alt="suppression utilisateur"></a>
                    </td>

                </tr>
            {% endfor %}

            </tbody>

        </table>


    </div>

    <div class="modal fade animate__animated animate__backInDown" id="modal_delete" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <p>Etes-vous s√ªr de vouloir supprimer cet utilisateur ?</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-confirm-delete">Oui</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

